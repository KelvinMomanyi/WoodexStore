  "name": "About Page",
  "settings": [
    {
      "type": "checkbox",
      "id": "enabled",
      "label": "Enable Section",
      "default": true
    },
    {
      "type": "header",
      "content": "Hero Section - Left Panel"
    },
    {
      "type": "image_picker",
      "id": "hero_left_image",
      "label": "Hero Left Background Image"
    },
    {
      "type": "text",
      "id": "hero_left_text",
      "label": "Hero Left Text",
      "default": "Discover Your Signature Scent"
    },
    {
      "type": "header",
      "content": "Hero Section - Right Panel"
    },
    {
      "type": "color_background",
      "id": "hero_right_bg",
      "label": "Right Panel Background",
      "default": "linear-gradient(135deg, #1a1a1a, #0f0f0f)"
    },
    {
      "type": "text",
      "id": "hero_title_part1",
      "label": "Title Part 1 (Gradient)",
      "default": "About"
    },
    {
      "type": "text",
      "id": "hero_title_part2",
      "label": "Title Part 2 (Gray)",
      "default": "Us"
    },
    {
      "type": "textarea",
      "id": "hero_subtitle",
      "label": "Hero Subtitle"
    },
    {
      "type": "richtext",
      "id": "brand_description",
      "label": "Brand Description",
      "default": "<p>At Fragrance, we believe that fragrance is an art form that transcends time and evokes emotions.</p>"
    },
    {
      "type": "text",
      "id": "established_year",
      "label": "Established Year",
      "default": "Est. 2019"
    },
    {
      "type": "header",
      "content": "Social Media Links"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "linkedin_url",
      "label": "LinkedIn URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "header",
      "content": "Feature Cards Section"
    },
    {
      "type": "checkbox",
      "id": "show_feature_cards",
      "label": "Show Feature Cards",
      "default": true
    },
    {
      "type": "text",
      "id": "feature_title_part1",
      "label": "Feature Title Part 1",
      "default": "The essence of"
    },
    {
      "type": "text",
      "id": "feature_title_highlight",
      "label": "Feature Title Highlight",
      "default": "timeless fragrance"
    },
    {
      "type": "text",
      "id": "feature_title_part2",
      "label": "Feature Title Part 2",
      "default": "meets modern luxury"
    },
    {
      "type": "textarea",
      "id": "feature_description",
      "label": "Feature Description",
      "default": "At Scentora, we curate the world's finest perfumes—each blend crafted to evoke emotion, memory, and elegance."
    },
    {
      "type": "text",
      "id": "primary_btn_text",
      "label": "Primary Button Text",
      "default": "Shop Our Collection"
    },
    {
      "type": "url",
      "id": "primary_btn_url",
      "label": "Primary Button URL"
    },
    {
      "type": "text",
      "id": "secondary_btn_text",
      "label": "Secondary Button Text",
      "default": "Learn Our Story"
    },
    {
      "type": "url",
      "id": "secondary_btn_url",
      "label": "Secondary Button URL"
    },
    {
      "type": "text",
      "id": "trust_label",
      "label": "Trust Badge Label",
      "default": "Loved by fragrance enthusiasts worldwide"
    },
    {
      "type": "image_picker",
      "id": "card_1_image",
      "label": "Card 1 Background Image"
    },
    {
      "type": "text",
      "id": "card_1_title",
      "label": "Card 1 Title",
      "default": "Classic Fragrance"
    },
    {
      "type": "image_picker",
      "id": "card_2_image",
      "label": "Card 2 Background Image"
    },
    {
      "type": "image_picker",
      "id": "card_3_image",
      "label": "Card 3 Background Image"
    },
    {
      "type": "header",
      "content": "Collections Section"
    },
    {
      "type": "checkbox",
      "id": "show_collections",
      "label": "Show Collections Section",
      "default": true
    },
    {
      "type": "text",
      "id": "collections_title",
      "label": "Collections Title",
      "default": "Featured Collections"
    },
    {
      "type": "textarea",
      "id": "collections_subtitle",
      "label": "Collections Subtitle",
      "default": "Discover our latest seasonal offerings, each piece crafted with meticulous attention to detail and uncompromising quality."
    },
    {
      "type": "header",
      "content": "Testimonials Section"
    },
    {
      "type": "checkbox",
      "id": "show_testimonials",
      "label": "Show Testimonials Section",
      "default": true
    },
    {
      "type": "text",
      "id": "testimonials_title",
      "label": "Testimonials Title",
      "default": "What Our Customers Say"
    },
    {
      "type": "textarea",
      "id": "testimonial_1_text",
      "label": "Testimonial 1 Text",
      "default": "This is the only store I trust for my signature scent. Their perfumes are divine!"
    },
    {
      "type": "text",
      "id": "testimonial_1_author",
      "label": "Testimonial 1 Author",
      "default": "Jane D."
    },
    {
      "type": "textarea",
      "id": "testimonial_2_text",
      "label": "Testimonial 2 Text",
      "default": "Unparalleled service and an amazing collection. I found my forever fragrance here."
    },
    {
      "type": "text",
      "id": "testimonial_2_author",
      "label": "Testimonial 2 Author",
      "default": "Michael S."
    },
    {
      "type": "textarea",
      "id": "testimonial_3_text",
      "label": "Testimonial 3 Text",
      "default": "Every scent tells a story. This store is a haven for perfume lovers."
    },
    {
      "type": "text",
      "id": "testimonial_3_author",
      "label": "Testimonial 3 Author",
      "default": "Sarah K."
    },
    {
      "type": "header",
      "content": "Call to Action Section"
    },
    {
      "type": "checkbox",
      "id": "show_cta",
      "label": "Show CTA Section",
      "default": true
    },
    {
      "type": "text",
      "id": "cta_title",
      "label": "CTA Title",
      "default": "Explore Our Signature Collection"
    },
    {
      "type": "image_picker",
      "id": "cta_bg_image",
      "label": "CTA Background Image"
    },
    {
      "type": "range",
      "id": "cta_overlay_opacity",
      "label": "CTA Overlay Opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "default": 0.5
    },
    {
      "type": "text",
      "id": "cta_button_text",
      "label": "CTA Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_button_url",
      "label": "CTA Button URL",
      "default": "/collections/all"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "collection_image",
          "label": "Collection Image"
        },
        {
          "type": "text",
          "id": "collection_name",
          "label": "Collection Name",
          "default": "Collection Name"
        },
        {
          "type": "textarea",
          "id": "collection_description",
          "label": "Collection Description",
          "default": "Collection description goes here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Page",
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}