<section class="section service" id="service" aria-labelledby="service-label">

  <div class="container">
    <p class="section-subtitle" id="service-label">{{ section.settings.service_heading }}</p>
    <h2 class="section-title">{{ section.settings.service_subheading }}</h2>
  </div>

  <div class="container">
    <ul class="service-list">

      {% for block in section.blocks %}
        <li data-reveal>
          <div class="service-card container">

            {% if block.settings.service_image %}
              <img src="{{ block.settings.service_image | img_url: 'medium' }}" 
                   width="340" 
                   height="380" 
                   loading="lazy" 
                   alt="{{ block.settings.service_title }}"
                   class="img">
            {% endif %}

            <div class="service-content">
              <div class="service-icon">
                {{ block.settings.service_icon }}
              </div>
              <h3 class="h3 card-title">{{ block.settings.service_title }}</h3>
              <p class="card-subtitle">{{ block.settings.service_description }}</p>
            </div>

            {% if block.settings.service_link != blank %}
              <a href="{{ block.settings.service_link }}" class="btn-icon" aria-label="Learn more about {{ block.settings.service_title }}">
                <svg xmlns="http://www.w3.org/2000/svg" width="43" height="20" viewBox="0 0 43 20" fill="none">
                  <path d="M0 10H41" stroke="currentColor" stroke-width="2" />
                  <path d="M33 1L41.9 10.2727L33 19" stroke="currentColor" stroke-width="2" />
                </svg>
              </a>
            {% endif %}

          </div>
        </li>
      {% endfor %}

    </ul>
  </div>
  
</section>

<style>
/*-----------------------------------*\
  #FRAGRANCE SERVICES SECTION
\*-----------------------------------*/

.service { 
  padding: 80px 15px;
  background: linear-gradient(to bottom, #fafafa 0%, #ffffff 100%);
}

.service .container {
  max-width: 1400px;
  margin: 0 auto;
}

.service .section-subtitle {
  text-align: center;
  font-size: var(--fs-7, 1.4rem);
  font-weight: var(--fw-600, 600);
  text-transform: uppercase;
  letter-spacing: 2px;
  color: var(--hoockers-green, #4CAF50);
  margin-bottom: 15px;
}

.service .section-title {
  text-align: center;
  font-size: var(--fs-2, 3.2rem);
  font-weight: var(--fw-700, 700);
  color: var(--eerie-black, #1a1a1a);
  margin-bottom: 60px;
  line-height: 1.3;
}

.service-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.service-list > li {
  border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  transition: background-color 0.3s ease;
}

.service-list > li:first-child {
  border-top: 1px solid rgba(0, 0, 0, 0.08);
}

.service-list > li:hover {
  background-color: rgba(76, 175, 80, 0.02);
}

.service-card { 
  padding: 40px 20px;
  display: flex;
  flex-direction: column;
  gap: 25px;
  position: relative;
}

.service-card .img { 
  display: none;
  border-radius: 16px;
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
}

.service-content {
  flex: 1;
}

.service-icon {
  width: 60px;
  height: 60px;
  background: linear-gradient(135deg, var(--hoockers-green, #4CAF50), #45a049);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20px;
  box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);
}

.service-icon svg {
  width: 32px;
  height: 32px;
  stroke: white;
  fill: none;
}

.card-title {
  font-size: var(--fs-3, 2.4rem);
  font-weight: var(--fw-700, 700);
  color: var(--eerie-black, #1a1a1a);
  margin-bottom: 15px;
  line-height: 1.3;
}

.service-card .card-subtitle {
  color: var(--eerie-black_80, rgba(26, 26, 26, 0.8));
  font-size: var(--fs-7, 1.6rem);
  font-weight: var(--fw-400, 400);
  line-height: 1.7;
  margin-bottom: 0;
}

.service-card .btn-icon {
  width: 55px;
  height: 55px;
  border: 2px solid var(--eerie-black, #1a1a1a);
  background-color: transparent;
  color: var(--eerie-black, #1a1a1a);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.4s ease;
  flex-shrink: 0;
  align-self: flex-start;
}

.service-card .btn-icon svg { 
  width: 25px;
  transition: transform 0.4s ease;
}

.service-card .btn-icon:hover {
  background-color: var(--hoockers-green, #4CAF50);
  border-color: var(--hoockers-green, #4CAF50);
  color: white;
  transform: translateX(10px);
}

.service-card .btn-icon:hover svg {
  transform: translateX(5px);
}

/* Responsive Design */

@media (min-width: 768px) {
  .service {
    padding: 100px 30px;
  }

  .service .section-title {
    font-size: var(--fs-1, 4rem);
    margin-bottom: 80px;
  }

  .service-card {
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 50px 30px;
    gap: 40px;
  }

  .service-content {
    max-width: 600px;
  }

  .service-icon {
    width: 70px;
    height: 70px;
    border-radius: 18px;
  }

  .service-icon svg {
    width: 36px;
    height: 36px;
  }

  .card-title {
    font-size: var(--fs-2, 2.8rem);
  }

  .service-card .card-subtitle {
    font-size: var(--fs-6, 1.8rem);
  }

  .service-card .btn-icon {
    width: 65px;
    height: 65px;
  }
}

@media (min-width: 992px) {
  .service {
    padding: 120px 40px;
  }

  .service-card { 
    position: relative;
    padding: 60px 40px;
  }

  .service-card .img {
    display: block;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 280px;
    height: 320px;
    object-fit: cover;
    opacity: 0;
    visibility: hidden;
    transition: all 0.5s ease;
    z-index: 1;
    filter: brightness(0.95);
  }

  .service-card:hover .img {
    opacity: 1;
    visibility: visible;
    transform: translate(-50%, -50%) scale(1.05);
  }

  .service-content,
  .service-card .btn-icon {
    position: relative;
    z-index: 2;
  }

  .service-list > li:hover .service-content {
    text-shadow: 0 0 20px rgba(255, 255, 255, 0.9);
  }

  .service-icon {
    width: 80px;
    height: 80px;
    border-radius: 20px;
  }

  .service-icon svg {
    width: 40px;
    height: 40px;
  }
}

@media (min-width: 1200px) {
  .service {
    padding: 140px 60px;
  }

  .service-card { 
    padding: 70px 50px;
  }

  .service-card .img {
    width: 320px;
    height: 360px;
  }

  .card-title {
    font-size: var(--fs-1, 3.2rem);
  }

  .service-card .card-subtitle {
    font-size: var(--fs-5, 2rem);
  }

  .service-card .btn-icon {
    width: 75px;
    height: 75px;
  }

  .service-card .btn-icon svg { 
    width: 30px;
  }

  .service-icon {
    width: 90px;
    height: 90px;
  }

  .service-icon svg {
    width: 44px;
    height: 44px;
  }
}

@media (min-width: 1400px) {
  .service { 
    padding: 160px 70px;
  }

  .service-card { 
    padding: 80px 60px;
  }

  .service-card .img {
    width: 360px;
    height: 400px;
  }
}
</style>

