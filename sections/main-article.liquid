<div class="content-wrapper container">
  <div class="article-container">
    <article class="article-content">
      <div class="article-header">
        <h1 class="article-title">{{ article.title }}</h1>
        
        <div class="article-meta">
          <span class="meta-author">By {{ article.author }}</span>
          <span class="meta-divider">•</span>
          <span class="meta-date">{{ article.created_at | date: "%B %d, %Y" }}</span>
          <span class="meta-divider">•</span>
          <span class="meta-reading-time">5 min read</span>
        </div>

        {% if article.tags.size > 0 %}
        <div class="article-tags">
          {% for tag in article.tags %}
          <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="article-tag">{{ tag }}</a>
          {% endfor %}
        </div>
        {% endif %}
      </div>

      <figure class="article-featured-image">
        <img src="{{ article.image | img_url: 'large' }}" alt="{{ article.title }}" class="featured-img">
        <figcaption>{{ article.excerpt | strip_html | truncatewords: 15 }}</figcaption>
      </figure>

      <section class="article-body">
        {{ article.content }}
      </section>

      <footer class="article-footer">
        <div class="author-bio">
          <div class="author-info">
            <h3>About the Author</h3>
            <p><strong>{{ article.author }}</strong></p>
            <p>Passionate writer and contributor. Follow for more insights and stories.</p>
          </div>
        </div>

        <div class="article-actions">
          <p>If you enjoyed this article, check out more on our <a href="{{ blog.url }}">blog</a>.</p>
        </div>
      </footer>
    </article>
  </div>

  <aside class="sidebar">
    <div class="sidebar-section">
      <h2 class="sidebar-title">Related Articles</h2>
      <ul class="related-articles-list">
        {% for related_article in blog.articles limit: 5 %}
          {% if related_article.id != article.id %}
          <li class="related-article-item">
            <a href="{{ related_article.url }}" class="related-article-link">
              {% if related_article.image %}
              <div class="related-article-thumb">
                <img src="{{ related_article.image | img_url: 'small' }}" alt="{{ related_article.title }}">
              </div>
              {% endif %}
              <div class="related-article-content">
                <h4 class="related-article-title">{{ related_article.title }}</h4>
                <span class="related-article-date">{{ related_article.created_at | date: "%b %d, %Y" }}</span>
              </div>
            </a>
          </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>

    <div class="sidebar-section">
      <h2 class="sidebar-title">Popular Tags</h2>
      <div class="tag-cloud">
        {% for tag in blog.all_tags %}
        <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="tag-cloud-item">{{ tag }}</a>
        {% endfor %}
      </div>
    </div>
  </aside>
</div>

