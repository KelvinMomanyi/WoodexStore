<section class="section hero1" aria-label="home">
  <div class="container">
    <h1 class="h2 hero-title">
      <strong class="strong">{{ section.settings.heading_text }}</strong>
    </h1>

    <div class="wrapper1">

      <form action="/contact#newsletter" method="post" class="newsletter-form" accept-charset="UTF-8">
        <input type="hidden" name="form_type" value="customer" />
        <input type="hidden" name="utf8" value="âœ“" />
        <input type="hidden" name="contact[tags]" value="newsletter">
        
        <input type="email" name="contact[email]" placeholder="Your email address" class="email-field" required>

        <button type="submit" class="btn btn-primary">Subscribe</button>
      </form>

      <p class="newsletter-text">
        {{ section.settings.search_text }}
      </p>

    </div>

  </div>
</section>

<style>
/*-----------------------------------*\
  #BLOG HERO SECTION
\*-----------------------------------*/

.section.hero1 {
  padding-block-start: 120px;
  padding-block-end: 60px;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  position: relative;
  overflow: hidden;
}

.section.hero1::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%239C92AC' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  opacity: 0.3;
  z-index: 0;
}

.hero1 .container {
  position: relative;
  z-index: 1;
  max-width: 900px;
  text-align: center;
}

.hero1 .hero-title {
  font-size: var(--fs-1, 3.6rem);
  line-height: 1.2;
  margin-block-end: 30px;
  color: var(--eerie-black, #1a1a1a);
  font-weight: var(--fw-700, 700);
}

.hero1 .hero-title .strong {
  display: block;
  background: linear-gradient(90deg, var(--hoockers-green, #4CAF50), #45a049);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.hero1 .wrapper1 {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
  max-width: 600px;
  margin-inline: auto;
}

.newsletter-form {
  display: flex;
  flex-direction: column;
  gap: 15px;
  width: 100%;
  background: var(--white, #fff);
  padding: 20px;
  border-radius: var(--radius-16, 16px);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.newsletter-form .email-field {
  padding: 15px 20px;
  font-size: var(--fs-7, 1.6rem);
  border: 2px solid var(--cultured, #f5f5f5);
  border-radius: var(--radius-8, 8px);
  outline: none;
  transition: all 0.3s ease;
  width: 100%;
}

.newsletter-form .email-field:focus {
  border-color: var(--hoockers-green, #4CAF50);
  box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.1);
}

.newsletter-form .email-field::placeholder {
  color: var(--eerie-black_80, rgba(26, 26, 26, 0.5));
}

.newsletter-form .btn {
  padding: 15px 30px;
  font-size: var(--fs-7, 1.6rem);
  font-weight: var(--fw-600, 600);
  border: none;
  border-radius: var(--radius-8, 8px);
  cursor: pointer;
  transition: all 0.3s ease;
  width: 100%;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.newsletter-form .btn-primary {
  background: var(--hoockers-green, #4CAF50);
  color: var(--white, #fff);
}

.newsletter-form .btn-primary:hover {
  background: #45a049;
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(76, 175, 80, 0.3);
}

.newsletter-form .btn-primary:active {
  transform: translateY(0);
}

.newsletter-text {
  font-size: var(--fs-8, 1.4rem);
  color: var(--eerie-black_80, rgba(26, 26, 26, 0.7));
  line-height: 1.6;
  text-align: center;
  max-width: 500px;
}

/* Responsive Design */

@media (min-width: 575px) {
  .section.hero1 {
    padding-block-start: 140px;
    padding-block-end: 80px;
  }

  .hero1 .hero-title {
    font-size: var(--fs-1, 4.2rem);
  }

  .newsletter-form {
    padding: 25px;
  }
}

@media (min-width: 768px) {
  .section.hero1 {
    padding-block-start: 160px;
    padding-block-end: 100px;
  }

  .hero1 .hero-title {
    font-size: 5rem;
    margin-block-end: 40px;
  }

  .newsletter-form {
    flex-direction: row;
    padding: 10px;
  }

  .newsletter-form .email-field {
    flex: 1;
  }

  .newsletter-form .btn {
    width: auto;
    padding: 15px 40px;
  }

  .newsletter-text {
    font-size: var(--fs-7, 1.6rem);
  }
}

@media (min-width: 992px) {
  .section.hero1 {
    padding-block-start: 180px;
    padding-block-end: 120px;
  }

  .hero1 .hero-title {
    font-size: 5.6rem;
  }

  .hero1 .wrapper1 {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 30px;
    max-width: 100%;
  }

  .newsletter-form {
    max-width: 500px;
  }

  .newsletter-text {
    display: block;
    max-width: 400px;
    text-align: left;
    line-height: 1.5;
  }
}

@media (min-width: 1200px) {
  .section.hero1 {
    padding-block-start: 200px;
    padding-block-end: 140px;
  }

  .hero1 .hero-title {
    font-size: 6.4rem;
    margin-block-end: 50px;
  }

  .newsletter-form .email-field,
  .newsletter-form .btn {
    font-size: 1.8rem;
  }
}

/* Success/Error Messages */
.newsletter-form .success-message,
.newsletter-form .error-message {
  padding: 12px;
  border-radius: var(--radius-8, 8px);
  font-size: var(--fs-8, 1.4rem);
  text-align: center;
  margin-block-start: 10px;
}

.newsletter-form .success-message {
  background-color: #d4edda;
  color: #155724;
  border: 1px solid #c3e6cb;
}

.newsletter-form .error-message {
  background-color: #f8d7da;
  color: #721c24;
  border: 1px solid #f5c6cb;
}
</style>

{% schema %}
{
  "name": "blog-hero",
  "settings": [
    {
      "type":"text",
      "id":"heading_text",
      "label":"Blog Heading",
      "default":"See our thoughts, stories and ideas."
     },
     {
      "type":"text",
      "id":"search_text",
      "label":"Newsletter Description",
      "default":"Get the email newsletter and unlock access to members-only content and updates"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "blog-hero"
    }
  ]
}
{% endschema %}